{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./out",
    "declaration": false,
    "noEmit": false,
    "types": ["node"],
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "files": ["src/index.ts"]
}
